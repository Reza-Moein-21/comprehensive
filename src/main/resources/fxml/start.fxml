<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<AnchorPane styleClass="base" stylesheets="@/css/start.css" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ir.comprehensive.controller.StartController">
    <GridPane styleClass="header-bar" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="20.0"/>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="60.0"/>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="20.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="50"/>
        </rowConstraints>

        <HBox alignment="CENTER_LEFT" GridPane.columnIndex="0">
            <JFXButton styleClass="header-button" onAction="#backToPrevious">
                <graphic>
                    <Pane styleClass="shape,arrow-back-shape"/>
                </graphic>
            </JFXButton>
        </HBox>

        <HBox alignment="CENTER" fillHeight="false" GridPane.columnIndex="1">
            <Label text="%appTitle"/>
        </HBox>

        <HBox alignment="CENTER_RIGHT" GridPane.columnIndex="2">
            <JFXButton styleClass="header-button">
                <graphic>
                    <Pane styleClass="shape,home-shape"/>
                </graphic>
            </JFXButton>
            <JFXButton styleClass="header-button">
                <graphic>
                    <Pane styleClass="shape,setting-shape"/>
                </graphic>
            </JFXButton>
        </HBox>
        <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
        </rowConstraints>
    </GridPane>


    <AnchorPane fx:id="main" AnchorPane.topAnchor="76" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10"
                AnchorPane.leftAnchor="10">
        <children>
            <fx:include source="homePage.fxml"/>
        </children>
    </AnchorPane>


</AnchorPane>
