<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" spacing="100"
      xmlns="http://javafx.com/javafx" nodeOrientation="RIGHT_TO_LEFT"
      fx:controller="ir.comprehensive.controller.HumanResourceController"
      AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"
      AnchorPane.leftAnchor="0">
    <JFXTabPane VBox.vgrow="ALWAYS">
        <Tab text="%humanResource" style="-fx-font-weight: bold;-fx-padding: 10 50">
            <VBox>
                <JFXDialog fx:id="createDialog" overlayClose="false" transitionType="TOP"
                           style="-fx-background-color: rgba(33,33,33,0.51)" nodeOrientation="RIGHT_TO_LEFT">
                    <JFXDialogLayout style="-fx-min-width: 1024;-fx-min-height: 700;-fx-padding: 10 5;">
                        <heading>
                            <HBox alignment="CENTER"
                                  style="-fx-alignment: center;-fx-border-width: 0 0 1 0;-fx-border-color: #9E9E9E">
                                <Label text="%createPerson"/>
                            </HBox>
                        </heading>
                        <body>
                            <VBox style="-fx-padding: 40 20;-fx-spacing: 50;">
                                <JFXTextField fx:id="txfFirstNameC" promptText="%firstName"/>
                                <JFXTextField fx:id="txfLastNameC" promptText="%lastName"/>
                                <JFXTextField fx:id="txfPhoneNumberC" promptText="%phoneNumber"/>
                                <JFXTextField fx:id="txfEmailC" promptText="%email"/>
                                <JFXComboBox fx:id="cbxCategoriesC" prefWidth="Infinity" promptText="%categories"/>
                            </VBox>
                        </body>
                        <actions>
                            <HBox style="-fx-alignment: top-right; -fx-spacing: 20">
                                <JFXButton text="%cancel" onAction="#closeCreateDialog" styleClass="default-button"
                                           buttonType="RAISED"/>
                                <JFXButton text="%save" onAction="#save" styleClass="primary-button"
                                           buttonType="RAISED"/>
                            </HBox>
                        </actions>
                    </JFXDialogLayout>
                </JFXDialog>
                <FlowPane style="-fx-hgap: 50; -fx-vgap: 50; ">
                    <JFXTextField fx:id="txfFirstName" promptText="%firstName"/>
                    <JFXTextField fx:id="txfLastName" promptText="%lastName"/>
                    <JFXTextField fx:id="txfPhoneNumber" promptText="%phoneNumber"/>
                    <JFXTextField fx:id="txfEmail" promptText="%email"/>
                    <JFXComboBox fx:id="cbxCategories" promptText="%categories"/>
                    <JFXButton fx:id="btnSearch" text="%search" styleClass="default-button" buttonType="RAISED"
                               onAction="#search"/>
                    <JFXButton fx:id="btnCreate" text="%create" styleClass="primary-button" buttonType="RAISED"
                               onAction="#openCreateDialog"/>
                </FlowPane>
                <TableView fx:id="tblPerson" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="%firstName" minWidth="200" prefWidth="400">
                            <cellValueFactory>
                                <PropertyValueFactory property="firstName"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="%lastName" minWidth="200" prefWidth="400">
                            <cellValueFactory>
                                <PropertyValueFactory property="lastName"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="%phoneNumber" minWidth="300" prefWidth="400">
                            <cellValueFactory>
                                <PropertyValueFactory property="phoneNumber"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="%email" minWidth="300" prefWidth="400">
                            <cellValueFactory>
                                <PropertyValueFactory property="email"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="%edit" minWidth="300" prefWidth="400">
                            <cellValueFactory>
                                <PropertyValueFactory property="%editButton"/>
                            </cellValueFactory>
                        </TableColumn>

                    </columns>
                </TableView>

            </VBox>
        </Tab>

        <Tab text="%categories" style="-fx-font-weight: bold;-fx-padding: 10 50">
            <VBox>
                <FlowPane style="-fx-hgap: 50; -fx-vgap: 50">
                    <JFXTextField promptText="%title"/>
                    <JFXTextField promptText="%phoneNumber"/>
                    <JFXTextField promptText="%fax"/>
                    <JFXTextField promptText="%email"/>
                    <JFXButton text="%search" styleClass="default-button" buttonType="RAISED"/>
                    <JFXButton text="%create" styleClass="primary-button" buttonType="RAISED"/>
                </FlowPane>
                <TableView fx:id="tblCategory" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="%title" minWidth="200" prefWidth="400">
                            <cellValueFactory>
                                <PropertyValueFactory property="title"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="%phoneNumber" minWidth="200" prefWidth="400">
                            <cellValueFactory>
                                <PropertyValueFactory property="lastName"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="%fax" minWidth="300" prefWidth="400">
                            <cellValueFactory>
                                <PropertyValueFactory property="fax"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="%email" minWidth="300" prefWidth="400">
                            <cellValueFactory>
                                <PropertyValueFactory property="email"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="%address" minWidth="300" prefWidth="400">
                            <cellValueFactory>
                                <PropertyValueFactory property="address"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="%description" minWidth="300" prefWidth="400">
                            <cellValueFactory>
                                <PropertyValueFactory property="description"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </VBox>
        </Tab>

    </JFXTabPane>

</VBox>
